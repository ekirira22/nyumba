{{#if addNewRental}}
<h1>New Rental</h1>
<div>
  <form>
    <div class="form-group">
      <label for="owner">Owner</label>
      {{input value=owner id="owner"}}
    </div>

    <div class="form-group">
      <label for="description">Description of The Rental</label>
      {{input value=description id="description"}}
    </div>

    <div class="form-group">
      <label for="area">Area of Residence</label>
      {{input value=area id="area"}}
    </div>

    <div class="form-group">
      <label for="cost">Cost of the Rental</label>
      {{input value=cost id="cost"}}
    </div>

    <div class="form-group">
      <label for="image">Image URL</label>
      {{input value=image id="image"}}
    </div>

    <button {{action 'saveRental1'}}>Save</button>
    <button {{action 'hideForm'}}>Hide Form</button>
  </form>
</div>
{{else}}

  <button {{action 'rentalForm'}}>New Rentals</button>

{{/if}}
